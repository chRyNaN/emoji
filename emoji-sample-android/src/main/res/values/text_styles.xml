<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base -->

    <style name="Light" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans_light</item>
        <item name="android:fontFamily">@font/open_sans_light</item>
    </style>

    <style name="Regular" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans</item>
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="SemiBold" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans_semibold</item>
        <item name="android:fontFamily">@font/open_sans_semibold</item>
    </style>

    <style name="Bold" parent="@android:style/TextAppearance">
        <item name="fontFamily">@font/open_sans_bold</item>
        <item name="android:fontFamily">@font/open_sans_bold</item>
    </style>

    <!-- Base Extensions -->

    <style name="TextAppearance.H1" parent="Light">
        <item name="android:textSize">@dimen/text_size_xxxxlarge</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.H2" parent="Light">
        <item name="android:textSize">@dimen/text_size_xxxlarge</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.H3" parent="Regular">
