    <style name="TextAppearance.H5" parent="Regular">
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.H6" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Subtitle" parent="Bold">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Subtitle2" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Button" parent="SemiBold">
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="TextAppearance.Body" parent="Regular">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">?attr/textColorPrimary</item>
