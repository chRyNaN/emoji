<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EmojiBottomSheetStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="emojiPickerItemContainerPaddingTop">12dp</item>
        <item name="emojiPickerItemContainerPaddingBottom">12dp</item>
        <item name="emojiPickerItemContainerPaddingStart">0dp</item>
        <item name="emojiPickerItemContainerPaddingEnd">0dp</item>
        <item name="emojiPickerCategoryContainerPaddingTop">0dp</item>
        <item name="emojiPickerCategoryContainerPaddingBottom">16dp</item>
        <item name="emojiPickerCategoryContainerPaddingStart">12dp</item>
        <item name="emojiPickerCategoryContainerPaddingEnd">12dp</item>
        <item name="emojiPickerCategoryPaddingStart">12dp</item>
        <item name="emojiPickerCategoryPaddingEnd">12dp</item>
        <item name="emojiPickerCategoryPaddingTop">12dp</item>
        <item name="emojiPickerCategoryPaddingBottom">12dp</item>
        <item name="emojiPickerPeekHeight">300dp</item>
        <item name="emojiPickerItemSize">48dp</item>
        <item name="emojiPickerBackgroundLeftCornerRadius">16dp</item>
        <item name="emojiPickerBackgroundRightCornerRadius">16dp</item>

        <item name="emojiPickerBackgroundColor">?attr/colorSurface</item>
        <item name="emojiPickerCategoryTextColor">?attr/colorOnSurface</item>
        <item name="emojiPickerCategorySelectedTextColor">?attr/colorControlActivated
        </item>
        <item name="emojiPickerCategoryBackgroundColor">?attr/colorSurface</item>
        <item name="emojiPickerCategorySelectedBackgroundColor">?attr/colorControlHighlight</item>

        <item name="emojiPickerProgressBarStyle">@style/EmojiBottomSheetProgressBarStyle</item>

        <item name="emojiPickerItemAnimator">@animator/emoji_item_selected_animator</item>

        <item name="emojiPickerCategoryTextAppearance">
            @style/TextAppearance.MaterialComponents.Subtitle1
        </item>

        <item name="bottomSheetStyle">@style/EmojiBottomSheetModalStyle</item>
    </style>

    <style name="EmojiBottomSheetModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="behavior_peekHeight">?attr/emojiPickerPeekHeight</item>
        <item name="android:background">@drawable/bg_emoji_bottom_sheet</item>
        <item name="shapeAppearanceOverlay">@style/BottomSheetDialogBackgroundShape</item>
        <item name="listPreferredItemHeightSmall">64dp</item>
    </style>

    <style name="BottomSheetDialogBackgroundShape" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">?attr/emojiPickerBackgroundRightCornerRadius
        </item>
        <item name="cornerSizeTopLeft">?attr/emojiPickerBackgroundLeftCornerRadius</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="EmojiBottomSheetProgressBarStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="trackColor">?attr/colorControlHighlight</item>
        <item name="colorAccent">?attr/colorControlHighlight</item>
    </style>

</resources>
